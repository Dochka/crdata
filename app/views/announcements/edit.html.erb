<% content_for(:intro) do %>
  <h1>Manage Annoucements</h1>
  <p class="solo">Use the interactive interface below to manage your Site Announcements.</p>
<% end -%>
<% content_for(:content) do %>
  <h2>Edit Annoucement</h2>
  <% semantic_form_for(@announcement, :url => announcement_path(@announcement), :method => :put) do |form| %>
    <% content_tag(:ul, :class => 'form') do %>
      <%= render :partial => "form", :object => form %>

      <%= clear(:li) %>
      <% form.buttons do %>
        <%= form.commit_button(:label => 'Create Announcement') %>
      <% end %>
      <span class="form-cancel">or <%= link_to('Cancel', announcements_path) %></span>
    <% end -%>
  <% end -%>
<% end -%>